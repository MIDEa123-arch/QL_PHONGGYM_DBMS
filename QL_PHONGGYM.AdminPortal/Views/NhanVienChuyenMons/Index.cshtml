@model IEnumerable<QL_PHONGGYM.AdminPortal.Models.NhanVienChuyenMon>
@{
    ViewBag.Title = "Gán Chuyên Môn Cho Nhân Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container-custom {
        padding: 30px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    .page-header {
        background: #5dade2;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .page-header h2 {
        color: white;
        margin: 0 0 10px 0;
        font-weight: 500;
        font-size: 26px;
    }

    .page-header p {
        color: rgba(255,255,255,0.9);
        margin: 0;
        font-size: 14px;
    }

    .btn-create {
        background: #5dade2;
        color: white;
        padding: 10px 25px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 500;
        display: inline-block;
        transition: all 0.3s;
        border: none;
    }

    .btn-create:hover {
        background: #3498db;
        color: white;
        text-decoration: none;
    }

    .table-container {
        background: white;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.08);
        overflow-x: auto;
    }

    .table-custom {
        width: 100%;
        margin: 0;
        border-collapse: collapse;
    }

    .table-custom thead {
        background: #5dade2;
    }

    .table-custom thead th {
        color: white;
        font-weight: 500;
        padding: 15px;
        border: none;
        text-align: left;
        font-size: 14px;
        white-space: nowrap;
    }

    .table-custom tbody tr {
        border-bottom: 1px solid #e9ecef;
        transition: all 0.3s;
    }

    .table-custom tbody tr:hover {
        background: #f0f8ff;
    }

    .table-custom tbody td {
        padding: 15px;
        vertical-align: middle;
        font-size: 14px;
        white-space: nowrap;
    }

    .table-custom tbody td:first-child {
        font-weight: 600;
    }

    .table-custom tbody td:last-child {
        white-space: normal;
    }

    .action-links a {
        padding: 6px 15px;
        border-radius: 20px;
        text-decoration: none;
        font-size: 13px;
        font-weight: 500;
        transition: all 0.3s;
        display: inline-block;
        margin: 2px;
    }

    .action-links .btn-edit {
        background: #4CAF50;
        color: white;
    }

    .action-links .btn-edit:hover {
        background: #45a049;
    }

    .action-links .btn-details {
        background: #2196F3;
        color: white;
    }

    .action-links .btn-details:hover {
        background: #0b7dda;
    }

    .action-links .btn-delete {
        background: #f44336;
        color: white;
    }

    .action-links .btn-delete:hover {
        background: #da190b;
    }

    @@media (max-width: 768px) {
        .container-custom {
            padding: 20px;
        }

        .table-container {
            padding: 15px;
        }

        .page-header {
            padding: 20px;
        }

        .page-header h2 {
            font-size: 22px;
        }
    }
</style>

<div class="container-custom">
    <div class="page-header">
        <h2>🎯 Quản Lý Gán Chuyên Môn</h2>
        <p>Đây là danh sách các chuyên môn đã được gán cho nhân viên.</p>
    </div>

    <p style="margin-bottom: 20px;">
        @Html.ActionLink("➕ Gán Chuyên Môn Mới", "Create", null, new { @class = "btn-create" })
    </p>

    <div class="table-container">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>
                        Tên Nhân Viên
                    </th>
                    <th>
                        Tên Chuyên Môn
                    </th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NhanVien.TenNV)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChuyenMon.TenChuyenMon)
                        </td>
                        <td class="action-links">
                            @Html.ActionLink("Sửa", "Edit", new { MaNV = item.MaNV, MaCM = item.MaCM }, new { @class = "btn-edit" })
                            @Html.ActionLink("Chi tiết", "Details", new { MaNV = item.MaNV, MaCM = item.MaCM }, new { @class = "btn-details" })
                            @Html.ActionLink("Xóa", "Delete", new { MaNV = item.MaNV, MaCM = item.MaCM }, new { @class = "btn-delete" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>