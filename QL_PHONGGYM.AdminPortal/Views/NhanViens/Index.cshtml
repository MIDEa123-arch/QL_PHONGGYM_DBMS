@model IEnumerable<QL_PHONGGYM.AdminPortal.Models.NhanVien>
@{
    ViewBag.Title = "Quản Lý Nhân Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container-custom {
        padding: 30px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    .page-header {
        background: #5dade2;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .page-header h2 {
        color: white;
        margin: 0;
        font-weight: 500;
        font-size: 26px;
    }

    .btn-create {
        background: #5dade2;
        color: white;
        padding: 10px 25px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 500;
        display: inline-block;
        transition: all 0.3s;
        border: none;
    }

    .btn-create:hover {
        background: #3498db;
        color: white;
        text-decoration: none;
    }

    .table-container {
        background: white;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.08);
        overflow-x: auto;
    }

    .table-custom {
        width: 100%;
        margin: 0;
    }

    .table-custom thead {
        background: #5dade2;
    }

    .table-custom thead th {
        color: white;
        font-weight: 500;
        padding: 15px;
        border: none;
        text-align: left;
        font-size: 14px;
        white-space: nowrap;
    }

    .table-custom tbody tr {
        border-bottom: 1px solid #e9ecef;
        transition: all 0.3s;
    }

    .table-custom tbody tr:hover {
        background: #f0f8ff;
    }

    .table-custom tbody td {
        padding: 15px;
        vertical-align: middle;
        font-size: 14px;
    }

    .action-links a {
        padding: 6px 15px;
        border-radius: 20px;
        text-decoration: none;
        font-size: 13px;
        font-weight: 500;
        transition: all 0.3s;
        display: inline-block;
        margin: 2px;
    }

    .action-links .btn-edit {
        background: #4CAF50;
        color: white;
    }

    .action-links .btn-edit:hover {
        background: #45a049;
    }

    .action-links .btn-details {
        background: #2196F3;
        color: white;
    }

    .action-links .btn-details:hover {
        background: #0b7dda;
    }

    .action-links .btn-delete {
        background: #f44336;
        color: white;
    }

    .action-links .btn-delete:hover {
        background: #da190b;
    }

    .gender-badge {
        padding: 5px 12px;
        border-radius: 15px;
        font-size: 12px;
        font-weight: 600;
    }

    .gender-male {
        background: #e3f2fd;
        color: #1976d2;
    }

    .gender-female {
        background: #fce4ec;
        color: #c2185b;
    }

    @@media (max-width: 768px) {
        .table-container {
            padding: 15px;
        }

        .page-header {
            padding: 20px;
        }

        .page-header h2 {
            font-size: 22px;
        }
    }
</style>

<div class="container-custom">
    <div class="page-header">
        <h2>👥 Quản Lý Nhân Viên</h2>
    </div>

    <div style="margin-bottom: 20px;">
        @Html.ActionLink("➕ Thêm Nhân Viên Mới", "Create", null, new { @class = "btn-create" })
    </div>

    <div class="table-container">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>Tên Nhân Viên</th>
                    <th>Chức Vụ</th>
                    <th>Giới Tính</th>
                    <th>Số Điện Thoại</th>
                    <th>Ngày Sinh</th>
                    <th>Tên Đăng Nhập</th>
                    <th>Mật Khẩu</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.TenNV</strong></td>
                        <td>@item.ChucVu.TenChucVu</td>
                        <td>
                            @if (item.GioiTinh != null)
                            {
                                <span class="gender-badge @(item.GioiTinh.ToLower() == "nam" ? "gender-male" : "gender-female")">
                                    @item.GioiTinh
                                </span>
                            }
                        </td>
                        <td>@item.SDT</td>
                        <td>@(item.NgaySinh.HasValue ? item.NgaySinh.Value.ToString("dd/MM/yyyy") : "")</td>
                        <td>@item.TenDangNhap</td>
                        <td>@item.MatKhau</td>
                        <td class="action-links">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaNV }, new { @class = "btn-edit" })
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaNV }, new { @class = "btn-details" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaNV }, new { @class = "btn-delete" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>