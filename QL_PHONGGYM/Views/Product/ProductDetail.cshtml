@model QL_PHONGGYM.ViewModel.SanPhamViewModel

@{
    ViewBag.Title = Model.TenSP;
}

<div class="container py-4 bg-white">
    <div class="row g-4">
        <div class="col-lg-7 col-md-7 p-0">
            <!-- Carousel hiển thị ảnh chính -->
            <div id="productCarousel" class="carousel slide mb-3 rounded-4 border" data-bs-ride="carousel">
                <div class="carousel-inner text-center">
                    <div class="carousel-item active">
                        <img src="@Url.Content("~/Content/Images/" + Model.UrlHinhAnhChinh)"
                             class="d-block mx-auto rounded-4"
                             style="object-fit: cover; width: 20rem; height: 21rem;"
                             alt="@Model.TenSP" />
                    </div>

                    @if (Model.UrlHinhAnhsPhu != null)
                    {
                        foreach (var img in Model.UrlHinhAnhsPhu)
                        {
                            <div class="carousel-item">
                                <img src="@Url.Content("~/Content/Images/" + img)"
                                     class="d-block mx-auto rounded-4"
                                     style="object-fit: cover; width: 20rem; height: 21rem;"
                                     alt="@Model.TenSP" />
                            </div>
                        }
                    }
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="d-flex gap-2 justify-content-center flex-wrap">
                @{
                    var allImages = new List<string> { Model.UrlHinhAnhChinh };
                    allImages.AddRange(Model.UrlHinhAnhsPhu ?? new List<string>());
                }

                @for (int i = 0; i < allImages.Count; i++)
                {
                    <img src="@Url.Content("~/Content/Images/" + allImages[i])"
                         data-bs-target="#productCarousel"
                         data-bs-slide-to="@i"
                         class="rounded border"
                         style="width: 5rem; height: 5rem; object-fit: cover; cursor: pointer;"
                         alt="Thumbnail" />
                }
            </div>
        </div>


        <div class="col-lg-5 col-md-5 ps-5">
            <div class="d-flex flex-column h-100">
                <h5 class="fw-bold mb-2">@Model.TenSP</h5>
                <div class="mb-1">
                    @if (Model.SoLuongTon > 0)
                    {
                        <span class="badge bg-success">Còn hàng (@Model.SoLuongTon sản phẩm)</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Hết hàng</span>
                    }
                </div>
                <div class="d-flex gap-3">
                    <p class="text-muted small">Thương hiệu: <span class="text-primary">@Model.Hang</span></p>
                    <span class="text-muted small">Xuất xứ: <span class="text-primary">@Model.XuatXu </span></span>
                </div>
                @if (Model.GiaKhuyenMai != null && Model.GiaKhuyenMai < Model.DonGia)
                {
                    <div class="mb-3">
                        <span class="fs-5 fw-bold text-danger">
                            @Model.GiaKhuyenMai.Value.ToString("N0").Replace(",", ".") VNĐ
                        </span>
                        <span class="fs-6 text-muted text-decoration-line-through ms-2">
                            @Model.DonGia.ToString("N0").Replace(",", ".") VNĐ
                        </span>
                        <span class="badge bg-danger ms-2 small">
                            -@(((Model.DonGia - Model.GiaKhuyenMai) / Model.DonGia * 100).Value.ToString("0"))%
                        </span>
                        <p class="small">(Tiết kiệm: <span class="fs-6 text-danger">@((Model.DonGia - Model.GiaKhuyenMai).Value.ToString("N0").Replace(",", ".")) VNĐ</span>)</p>
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        <span class="fs-4 fw-bold text-dark">
                            @Model.DonGia.ToString("N0").Replace(",", ".") VNĐ
                        </span>
                    </div>
                }
                <div>
                    @if (Model.SoLuongTon > 0)
                    {
                        <div class="d-flex gap-2 mb-3">
                            <div class="d-flex gap-2 align-items-center">
                                <label class="fw-semibold text-nowrap">Số lượng:</label>
                                <input type="number" class="form-control" value="1" min="1" max="@Model.SoLuongTon" style="width: 5rem; height: 3rem;" />
                            </div>
                            <button class="btn btn-outline-primary flex-grow-1 fw-semibold text-uppercase" style="font-size: 14px">
                                Thêm vào giỏ hàng
                            </button>
                        </div>
                        <button class="btn btn-primary btn-lg w-100 d-flex flex-column">
                            <span class=" fw-semibold text-uppercase text-white" style="font-size: 14px">Mua ngay</span>
                            <span class=" fw-semibold text-uppercase text-white" style="font-size: 14px">Giao hàng tận nơi hoặc nhận tại cửa hàng</span>
                        </button>
                        <div class="mt-2 w-100 text-center">
                            <p style="font-size: 14px">Gọi đặt mua <a class="text-primary text-decoration-none" href="tel:66663636 " style="font-size: 14px">6666.3636</a> (8:00 - 22:00)</p>
                        </div>
                    }
                    else
                    {
                        <div class="btn btn-outline-danger btn-lg w-100 rounded-2 fs-6">
                            Hết hàng
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>