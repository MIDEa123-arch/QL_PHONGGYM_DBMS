@model QL_PHONGGYM.ViewModel.KhachHangLoginViewModel

@{
    ViewBag.Title = "Đăng nhập tài khoản";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng Nhập</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Ẩn dấu chấm trong ValidationSummary */
        .validation-summary-errors ul {
            list-style: none;
            padding-left: 0;
            margin-left: 0;
        }

        .login-alert {
            position: fixed;
            top: 9%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 390px;
            max-width: 90%;
            background-color: #ffd8d8;
            border: 1px solid #dc3545;
            z-index: 1050;
        }

            .login-alert .btn-close {
                outline: none;
                box-shadow: none;
            }

                .login-alert .btn-close:focus {
                    outline: none;
                    box-shadow: none;
                }

        /* Style cho phần bên trái */
        .left-section {
            background: #f8f9fa;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
        }

        .membership-content {
            max-width: 650px;
            width: 100%;
        }

        .gym-logo {
            display: flex;
            gap: 20px;
            margin-top:35px;
            margin-bottom: 35px;
            justify-content: center;
            align-items: center;
        }

        .logo-img {
            height: 60px;
            width: auto;
            object-fit: contain;

        }

        .membership-title {
            font-size: 30px;
            color: #333;
            margin-bottom: 12px;
            font-weight: 400;
            text-align: center;
        }

            .membership-title .highlight {
                color: #0d6efd;
                font-weight: bold;
            }

        .membership-subtitle {
            color: #666;
            font-size: 16px;
            margin-bottom: 35px;
            text-align: center;
        }

        .benefits-container {
            background: white;
            border: 3px solid #0d6efd;
            border-radius: 15px;
            padding: 35px 30px;
            position: relative;
        }

        .benefit-item {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            margin-bottom: 18px;
        }

            .benefit-item:last-of-type {
                margin-bottom: 25px;
            }

        .gift-icon {
            font-size: 20px;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .benefit-text {
            color: #333;
            font-size: 15px;
            line-height: 1.6;
        }

            .benefit-text strong {
                font-weight: 600;
                color: #000;
            }

        .view-more-link {
            text-align: center;
            padding-top: 10px;
        }

            .view-more-link a {
                color: #0d6efd;
                text-decoration: none;
                font-size: 15px;
                font-weight: 500;
            }

                .view-more-link a:hover {
                    text-decoration: underline;
                }

        .decorative-icons {
            text-align: center;
            margin-top: 30px;
            font-size: 18px;
            line-height: 1.6;
            color: #555;
            font-style: italic;
            font-weight: 500;
        }
    </style>
</head>
<body class="bg-light">
    @if (ViewBag.Err != null)
    {
        <div class="alert alert-danger alert-dismissible fade show login-alert" role="alert">
            <div class="text-danger" style="font-size: 15px; line-height: 1.2;">@ViewBag.Err</div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="container-fluid h-100 p-0">
        <div class="row h-100 m-0">
            <!-- Div bên trái với membership info -->
            <div class="col-md-7 left-section">
                <div class="membership-content">
                    <div class="gym-logo">
                        <img src="~/Content/Images/logo.png" alt="Logo" class="logo-img" />
                    </div>

                    <h2 class="membership-title">
                        Trở thành hội viên <span class="highlight">VIP MEMBER</span>
                    </h2>
                    <p class="membership-subtitle">
                        Để không bỏ lỡ các ưu đãi hấp dẫn từ Phòng GYM
                    </p>

                    <div class="benefits-container">
                        <div class="benefit-item">
                            <span class="gift-icon">🎁</span>
                            <div class="benefit-text">
                                <strong>Giảm giá đến 20%</strong> khi đăng ký các gói tập luyện tại phòng gym
                            </div>
                        </div>

                        <div class="benefit-item">
                            <span class="gift-icon">🎁</span>
                            <div class="benefit-text">
                                <strong>Miễn phí tư vấn</strong> chương trình tập luyện cá nhân từ HLV chuyên nghiệp
                            </div>
                        </div>

                        <div class="benefit-item">
                            <span class="gift-icon">🎁</span>
                            <div class="benefit-text">
                                <strong>Tặng voucher trị giá đến 500.000đ</strong> cho hội viên thân thiết
                            </div>
                        </div>

                        <div class="benefit-item">
                            <span class="gift-icon">🎁</span>
                            <div class="benefit-text">
                                Ưu đãi <strong>đổi gói tập linh hoạt</strong> không mất phí
                            </div>
                        </div>

                        <div class="benefit-item">
                            <span class="gift-icon">🎁</span>
                            <div class="benefit-text">
                                Tháng hội viên nhận voucher <strong>trị giá 300.000đ</strong>
                            </div>
                        </div>

                        <div class="benefit-item">
                            <span class="gift-icon">🎁</span>
                            <div class="benefit-text">
                                Đặc quyền <strong>học viên/giáo viên ưu đãi thêm đến 15%</strong>
                            </div>
                        </div>

                        <div class="view-more-link">
                            <a href="#">Xem chi tiết chính sách ưu đãi Member →</a>
                        </div>
                    </div>

                    <div class="decorative-icons">
                        "Cơ thể bạn có thể chịu đựng gần như mọi thứ, chính suy nghĩ của bạn mới là điều bạn cần thuyết phục."
                    </div>
                </div>
            </div>

            <!-- Div bên phải - Form đăng nhập gốc -->
            <div class="col-md-5 bg-white text-center d-flex flex-column align-items-center justify-content-center" style="height: 100vh;">
                <span class="text-primary fs-3 fw-bold m-3">Đăng nhập GYM</span>

                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new
                {
                    role = "form",
                    @class = "d-flex flex-column align-items-center justify-content-center",
                    @style = "width: 400px; max-width: 100%;"
                }))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3 w-100 d-flex flex-column">
                        @Html.LabelFor(m => m.TenDangNhap, new { @class = "form-label text-start" })
                        @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control py-2", placeholder = "Nhập tên đăng nhập của bạn", @style = "max-width: 100%;" })
                        @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger small mt-2 text-start" })
                    </div>

                    <div class="mb-3 w-100 d-flex flex-column">
                        @Html.LabelFor(m => m.MatKhau, new { @class = "form-label text-start" })
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control py-2", placeholder = "Nhập mật khẩu", @style = "max-width: 100%;" })
                        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger small mt-2 text-start" })
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3 mt-2">Đăng nhập</button>

                    <a href="@Url.Action("ForgotPassword", "Account")" class="text-decoration-none">Quên mật khẩu?</a>
                    <div class="mt-5 d-flex gap-2">
                        <span class="small text-muted">Bạn chưa có tài khoản</span>
                        <a class="small" href="@Url.Action("Register", "Account")">Đăng ký ngay</a>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>